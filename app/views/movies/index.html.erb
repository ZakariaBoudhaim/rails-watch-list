<div class="navbar navbar-expand-sm navbar-light navbar-lewagon ">
  <div class="container-fluid">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <%# if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Messages", "#", class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "https://media.licdn.com/dms/image/D4E03AQGmCpui6XxumA/profile-displayphoto-shrink_400_400/0/1703707133508?e=1710979200&v=beta&t=3BkrbWFk7nn4n8n-DmNWLD6OZA3pQJCXxfaQBgUbVFg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Action", "#", class: "dropdown-item" %>
              <%= link_to "Another action", "#", class: "dropdown-item" %>
              <%= link_to "Log out", "#", class: "dropdown-item", data: {turbo_method: :delete} %>
            </div>
          </li>
      </ul>
    </div>
  </div>
</div>
<div class="container ">
<div class="banner mb-1" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container ml-3">
    <h1>Ready for a movie night? Grab some popcorn and let's enjoy!</h1>
    <p>Change your life and learn to code at one of our campuses around the world.</p>
    <%= link_to "Your list",  lists_path, class:"btn btn-primary" %>
  </div>
</div>
<h2 class="my-3" style="text-shadow: 1px 1px #000000;">See all the movies</h2>

<div class="cards">
<% @movies.each do |movie|  %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%=movie.post_url%>)">
    <%=link_to movie.title , movie_path(movie), class:"text-decoration-none text-white", style:"text-shadow: 1px 2px #000000;"%>
  </div>
  <% end %>
</div>
</div>
