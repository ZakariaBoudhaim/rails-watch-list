<div class="banner mb-1" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container">
    <h1 class="text-center"><%= @list.name.capitalize %></h1>
  </div>
</div>
<div class="row">
    <div class="col-sm-12 text-start" style="padding-left:100px;">
        <button id="btnSearch" class="btn btn-primary btn-md center-block" Style="width: 150px;" OnClick="btnSearch_Click" ><%= link_to "add a movie", new_list_bookmark_path(@list), class:"text-decoration-none text-white" %></button>
         <button id="btnClear" class="btn btn-warning btn-md center-block" Style="width: 150px;" OnClick="btnClear_Click" ><%= link_to "Edit #{@list.name}", edit_list_path(@list), class:"text-decoration-none text-white" %></button>
         <button id="btnClear" class="btn btn-danger btn-md center-block" Style="width: 150px;" OnClick="btnClear_Click" ><%= link_to "Delete #{@list.name}", lists_path(@list), method: :delete, class:"text-decoration-none text-white" %></button>
     </div>
<div class="container mt-5">
<div ><%= link_to "Back to all list", lists_path, class: "btn btn-success ml-5" %></div>
  <ul>
     <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
         <div class="row">
    <div class="col-lg-6 mx-auto">

        <!-- CUSTOM BLOCKQUOTE -->
        <blockquote class="blockquote blockquote-custom bg-white p-5 shadow rounded">
          <img src="<%= movie.post_url%>" alt="" style="width:100px;">
            <div class="blockquote-custom-icon bg-info shadow-sm"><i class="fa fa-quote-left text-white"></i></div>
            <p class="mb-0 mt-2 font-italic">"<%= movie.overview %>"</p>
            <footer class="blockquote-footer pt-4 mt-4 border-top"><%= movie.title.capitalize %>
            <%= button_to "delete", bookmark_path(bookmark), method: :delete, class:"btn btn-warning" %>
            </footer>
        </blockquote><!-- END -->

    </div>
</div></li>
  <% end %>
   </ul>
