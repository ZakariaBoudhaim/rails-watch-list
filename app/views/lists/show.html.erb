<div class="container mt-5">
<%= link_to "add a movie", new_list_bookmark_path(@list) %>
  <h1><%= @list.name %> </h1>
  <ul>
     <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
         <li><strong><%= movie.title %> <span class="text-muted font-weight-normal"> <%= movie.rating %> <i class="fas fa-star star-yellow"></i></span></strong>
         <%= button_to "delete#{movie.title}", bookmark_path(bookmark), method: :delete, class:"btn btn-warning" %></li>

  </ul>
  <% end %>
  <%= link_to "Edit #{@list.name}", edit_list_path(@list) %>
  <br>
  <%= button_to "Delete #{@list.name}", list_path(@list), method: :delete %>
  <br>
  <%= link_to "Back to all list", lists_path %>
